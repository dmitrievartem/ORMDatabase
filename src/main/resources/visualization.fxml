<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox fx:id="hBox" alignment="CENTER" spacing="50.0" stylesheets="@ormdatabase/controller/light.css" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="ormdatabase.controller.VisualizationController">
   <children>
      <VBox fx:id="vBox1" alignment="CENTER" spacing="30.0" styleClass="shim-stack-vbox">
         <children>
            <VBox spacing="10.0">
               <children>
                  <TableView fx:id="reboundTable" editable="true" style="-fx-fixed-cell-size: 25;">
                    <columns>
                      <TableColumn fx:id="reboundNumberColumn" prefWidth="75.0" text="К" />
                      <TableColumn fx:id="reboundDiameterColumn" prefWidth="76.0" text="Д" />
                        <TableColumn fx:id="reboundThicknessColumn" prefWidth="76.0" text="Т" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Button id="table-button" fx:id="reboundAddButton" mnemonicParsing="false" onAction="#addDeleteRow" text="+" />
                        <Button id="table-button" fx:id="reboundDeleteButton" mnemonicParsing="false" onAction="#addDeleteRow" text="-" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <VBox spacing="10.0">
               <children>
                  <TableView fx:id="compressionTable" editable="true">
                    <columns>
                      <TableColumn fx:id="compressionNumberColumn" prefWidth="75.0" text="К" />
                      <TableColumn fx:id="compressionDiameterColumn" prefWidth="75.0" text="Д" />
                        <TableColumn fx:id="compressionThicknessColumn" prefWidth="75.0" text="Т" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Button id="table-button" fx:id="compressionAddButton" mnemonicParsing="false" onAction="#addDeleteRow" text="+" />
                        <Button id="table-button" fx:id="compressionDeleteButton" mnemonicParsing="false" onAction="#addDeleteRow" text="-" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
         <HBox.margin>
            <Insets />
         </HBox.margin>
      </VBox>
      <ScrollPane id="visualization-scroll-pane" fx:id="scrollPane" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" minWidth="500.0">
         <content>
            <VBox id="visualization-vbox" fx:id="stackVisualizationVBox" alignment="CENTER" spacing="10.0" />
         </content>
         <padding>
            <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
         </padding>
      </ScrollPane>
   </children>
</HBox>
