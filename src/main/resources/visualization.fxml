<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ormdatabase.controller.VisualizationController">
   <children>
      <HBox fx:id="hBox" prefHeight="100.0" prefWidth="200.0" styleClass="hbox" stylesheets="@css/record.css">
         <children>
            <VBox fx:id="vBox1" alignment="CENTER" styleClass="shim-stack-vbox">
               <children>
                  <TableView fx:id="reboundTable" editable="true" style="-fx-fixed-cell-size: 25;">
                    <columns>
                      <TableColumn fx:id="reboundNumberColumn" prefWidth="75.0" text="К" />
                      <TableColumn fx:id="reboundDiameterColumn" prefWidth="76.0" text="Д" />
                        <TableColumn fx:id="reboundThicknessColumn" prefWidth="76.0" text="Т" />
                    </columns>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="reboundAddButton" maxHeight="30.0" maxWidth="30.0" minHeight="30.0" minWidth="30.0" mnemonicParsing="false" onAction="#addDeleteRow" prefHeight="30.0" prefWidth="30.0" styleClass="add-delete-button" stylesheets="@css/add.css" text="+" />
                        <Button fx:id="reboundDeleteButton" maxHeight="30.0" maxWidth="30.0" minHeight="30.0" minWidth="30.0" mnemonicParsing="false" onAction="#addDeleteRow" prefHeight="30.0" prefWidth="30.0" styleClass="add-delete-button" stylesheets="@css/add.css" text="-" />
                     </children>
                  </HBox>
                  <TableView fx:id="compressionTable" editable="true">
                    <columns>
                      <TableColumn fx:id="compressionNumberColumn" prefWidth="75.0" text="К" />
                      <TableColumn fx:id="compressionDiameterColumn" prefWidth="75.0" text="Д" />
                        <TableColumn fx:id="compressionThicknessColumn" prefWidth="75.0" text="Т" />
                    </columns>
                     <VBox.margin>
                        <Insets top="25.0" />
                     </VBox.margin>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="compressionAddButton" mnemonicParsing="false" onAction="#addDeleteRow" styleClass="add-delete-button" stylesheets="@css/add.css" text="+" />
                        <Button fx:id="compressionDeleteButton" mnemonicParsing="false" onAction="#addDeleteRow" styleClass="add-delete-button" stylesheets="@css/add.css" text="-" />
                     </children>
                  </HBox>
               </children>
               <HBox.margin>
                  <Insets left="50.0" />
               </HBox.margin>
            </VBox>
            <ScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" maxHeight="750.0" maxWidth="500.0" minWidth="500.0" style="-fx-border-color: #6d7986;">
               <content>
                  <VBox fx:id="stackVisualizationVBox" alignment="CENTER" maxHeight="750.0" maxWidth="500.0" spacing="10.0" />
               </content>
               <padding>
                  <Insets bottom="20.0" top="20.0" />
               </padding>
            </ScrollPane>
         </children>
      </HBox>
   </children>
</AnchorPane>
