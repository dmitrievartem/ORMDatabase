<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ormdatabase.controller.SearchController">
   <children>
      <HBox id="search-header-hbox" fx:id="headerHbox" alignment="CENTER">
         <children>
            <TextField id="search-id" fx:id="requestTextField" promptText="ID">
               <HBox.margin>
                  <Insets />
               </HBox.margin></TextField>
            <TextField id="search-name" promptText="ФИО" />
            <TextField id="search-car" promptText="Машина" />
            <TextField id="search-city" promptText="Город" />
            <CheckBox fx:id="favoritesCheckBox" mnemonicParsing="false" text="Избранное" />
            <Button id="search-button" fx:id="searchButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#search" style="-fx-font-family: Verdana; -fx-border-radius: 10;" text="Искать">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets bottom="25.0" />
         </VBox.margin>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </HBox>
      <TableView fx:id="searchTable">
        <columns>
            <TableColumn fx:id="idColumn" minWidth="-1.0" prefWidth="65.60005033016205" text="ID" />
          <TableColumn fx:id="nameColumn" prefWidth="232.00000762939453" text="ФИО" />
          <TableColumn fx:id="carColumn" minWidth="0.0" prefWidth="0.0" text="Машина" />
            <TableColumn fx:id="dateColumn" prefWidth="75.0" text="Дата" />
            <TableColumn fx:id="phoneNumberColumn" prefWidth="75.0" text="Телефон" />
            <TableColumn fx:id="cityColumn" prefWidth="75.0" text="Город" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </TableView>
   </children>
</VBox>
