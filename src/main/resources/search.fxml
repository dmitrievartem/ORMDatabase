<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ormdatabase.controller.SearchController">
   <children>
      <HBox alignment="CENTER" prefHeight="50.0">
         <children>
            <Label styleClass="search-input-label" stylesheets="@point/css/search.css" text="Имя" />
            <TextField fx:id="nameTextField" styleClass="search-input-text-field-name" stylesheets="@point/css/search.css" />
            <Label styleClass="search-input-label" stylesheets="@point/css/search.css" text="Машина" />
            <TextField fx:id="carTextField" styleClass="search-input-text-field-car" stylesheets="@point/css/search.css" />
            <Label minWidth="46.0" prefHeight="20.0" prefWidth="46.0" styleClass="search-input-label" stylesheets="@point/css/search.css" text="ID" />
            <TextField fx:id="idTextField" styleClass="search-input-text-field-id" stylesheets="@point/css/search.css" />
            <Label styleClass="search-input-label" stylesheets="@point/css/search.css" text="Избранное" />
            <CheckBox fx:id="favoritesCheckBox" mnemonicParsing="false" />
            <Button fx:id="searchButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#search" styleClass="search-button" stylesheets="@point/css/search.css" text="Искать">
               <HBox.margin>
                  <Insets left="30.0" />
               </HBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets right="20.0" />
         </VBox.margin>
      </HBox>
      <TableView fx:id="searchTable" stylesheets="@point/css/search.css">
        <columns>
            <TableColumn fx:id="idColumn" prefWidth="65.60005033016205" text="ID" />
          <TableColumn fx:id="nameColumn" prefWidth="232.00000762939453" text="ФИО" />
          <TableColumn fx:id="carColumn" minWidth="0.0" prefWidth="0.0" text="Машина" />
            <TableColumn fx:id="dateColumn" prefWidth="75.0" text="Дата" />
            <TableColumn fx:id="phoneNumberColumn" prefWidth="75.0" text="Телефон" />
            <TableColumn fx:id="cityColumn" prefWidth="75.0" text="Город" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </TableView>
   </children>
</VBox>
