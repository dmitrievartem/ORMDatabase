<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" cache="false" cacheHint="SPEED" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="ormdatabase.controller.SearchController">
   <children>
      <HBox id="search-header-hbox" fx:id="headerHbox" alignment="CENTER" cache="false" cacheHint="SPEED">
         <children>
            <TextField id="search-id" fx:id="idTextField" cache="false" cacheHint="SPEED" promptText="ID">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </TextField>
            <TextField id="search-name" fx:id="nameTextField" cache="false" cacheHint="SPEED" promptText="ФИО" />
            <TextField id="search-car" fx:id="carTextField" cache="false" cacheHint="SPEED" promptText="Машина" />
            <TextField id="search-city" fx:id="cityTextField" cache="false" cacheHint="SPEED" promptText="Город" />
            <CheckBox id="search-favorites" fx:id="favoritesCheckBox" cache="false" cacheHint="SPEED" mnemonicParsing="false" text="Избранное">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </CheckBox>
            <Button id="search-button" fx:id="searchButton" alignment="CENTER" cache="false" cacheHint="SPEED" contentDisplay="CENTER" mnemonicParsing="false" onAction="#search" style="-fx-font-family: Verdana; -fx-border-radius: 10;" text="Искать">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets bottom="25.0" />
         </VBox.margin>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </HBox>
      <TableView id="search-table" fx:id="searchTable" cache="false" cacheHint="SPEED" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" editable="false" minWidth="50.0" prefWidth="75.0" text="ID" />
          <TableColumn fx:id="nameColumn" editable="false" minWidth="250.0" prefWidth="-1.0" text="ФИО" />
          <TableColumn fx:id="carColumn" editable="false" minWidth="150.0" prefWidth="200.0" text="Машина" />
            <TableColumn fx:id="dateColumn" editable="false" minWidth="100.0" prefWidth="150.0" text="Дата" />
            <TableColumn fx:id="phoneNumberColumn" editable="false" minWidth="100.0" prefWidth="150.0" text="Телефон" />
            <TableColumn fx:id="cityColumn" editable="false" minWidth="100.0" prefWidth="150.0" text="Город" />
        </columns>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
</VBox>
